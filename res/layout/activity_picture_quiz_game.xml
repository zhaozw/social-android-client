<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvPicQuizGameQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayoutBottomPanel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/pic_game_question"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_marginRight="2dp" >

            <ImageView
                android:id="@+id/quizGameImage1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:padding="6dp"
                android:src="@drawable/image" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/roundedframe" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout3"
            android:layout_width="160dp"
            android:layout_height="140dp" 
            android:layout_marginLeft="2dp">

            <ImageView
                android:id="@+id/quizGameImage2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:padding="6dp"
                android:src="@drawable/image" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/roundedframe" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/framelayout232"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_marginRight="2dp">

            <ImageView
                android:id="@+id/quizGameImage3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:padding="6dp"
                android:src="@drawable/image" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/roundedframe" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_marginLeft="2dp" >

            <ImageView
                android:id="@+id/quizGameImage4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:padding="6dp"
                android:src="@drawable/image" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/roundedframe" />
        </FrameLayout>
    </LinearLayout>
    
 
	   <!-- Bottom Panel Section Start-->
      <LinearLayout
          android:id="@+id/linearLayoutBottomPanel"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:layout_alignParentBottom="true"
          android:background="@color/GrayLight"
          android:gravity="center_horizontal"
          android:orientation="horizontal" >

          <TextView
              android:id="@+id/quizGamePlayerName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_marginLeft="10dp"
              android:text="Aviv Shafir"
              android:textAppearance="?android:attr/textAppearanceMedium" />
          
	           <!-- Hearts Section Start-->
	         <LinearLayout
		          android:id="@+id/linearLayoutHearts"
		          android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:background="@color/GrayLight"
		          android:gravity="right"
		          android:layout_marginTop="15dp"
		          android:orientation="horizontal" >

				      <ImageView
				           android:id="@+id/ivHeart1"
				           android:contentDescription="heart1"
				           android:layout_width="30dp"
				           android:layout_height="40dp"
				           android:src="@drawable/heart" />    
				      <ImageView
				           android:id="@+id/ivHeart2"
				            android:contentDescription="heart2"
				           android:layout_width="30dp"
				           android:layout_height="40dp"
				           android:src="@drawable/heart" />
				      <ImageView
				           android:id="@+id/ivHeart3"
				           android:contentDescription="heart3"
				           android:layout_width="30dp"
				           android:layout_height="40dp"
				
				           android:src="@drawable/heart" />
				      <ImageView
				           android:id="@+id/ivHeart4"
				           android:contentDescription="heart4"
				           android:layout_width="30dp"
				           android:layout_height="40dp"
				           android:src="@drawable/heart" /> 
				      <ImageView
				           android:id="@+id/ivHeart5"
				            android:contentDescription="heart5"
				           android:layout_width="30dp"
				           android:layout_height="40dp"
				           android:src="@drawable/heart" />
				      
				      
				</LinearLayout>   
	    	 <!-- Hearts Section End -->
			      
    </LinearLayout>
   <!-- Bottom Panel Section End-->


 
</RelativeLayout>