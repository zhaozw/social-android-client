<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >
    <!-- ListRow Left side Thumbnail image -->
    <LinearLayout
        android:id="@+id/linearLayoutQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/ivQuiz"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginTop="5dp"
            android:src="@drawable/selflearnning" />

    </LinearLayout>
    
    <!-- Rightend Arrow -->
    <ImageView
        android:id="@+id/ivRightArrow"
        android:contentDescription="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/rightarrow" />

    <TextView
        android:id="@+id/tvFeatureTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/linearLayoutQuiz"
        android:text="Quiz Game"
        android:textColor="#040404"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/tvFeatureDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFeatureTitle"
        android:layout_alignLeft="@+id/tvFeatureTitle"
        android:layout_centerHorizontal="true"
        android:text="Closed Questiones Quiz"
        android:textColor="#343434"
        android:textSize="15sp" />

</RelativeLayout>