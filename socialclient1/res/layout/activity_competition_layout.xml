<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<RelativeLayout 
		    android:id="@+id/RelativeLayout1"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingTop="@dimen/activity_vertical_margin">
	
	    <View
	        android:id="@+id/lineBelowWaiting"
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/ppvCompetitionGuest"
	        android:layout_marginTop="22dp"
	        android:background="@android:color/darker_gray" />
	
	    <View
	        android:id="@+id/ViewPlayer1"
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:layout_above="@+id/ppvCompetitionHost"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="24dp"
	        android:background="@android:color/darker_gray" />
	
	    <com.facebook.widget.ProfilePictureView
	        android:id="@+id/ppvCompetitionHost"
	        android:layout_width="60dip"
	        android:layout_height="60dip"
	        android:layout_alignLeft="@+id/ppvCompetitionGuest"
	        android:layout_alignParentBottom="true"
	        android:contentDescription="@string/app_name"
	        android:src="@drawable/profileimageme" >
	    </com.facebook.widget.ProfilePictureView>
	
	    <com.facebook.widget.ProfilePictureView
	        android:id="@+id/ppvCompetitionGuest"
	        android:layout_width="60dip"
	        android:layout_height="60dip"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="20dp"
	        android:contentDescription="@string/app_name"
	        android:src="@drawable/profileimageme" >
	    </com.facebook.widget.ProfilePictureView>
	
	    <TextView
	        android:id="@+id/tvCompetePlayer2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/ivFlagPlayer2"
	        android:layout_alignTop="@+id/ppvCompetitionGuest"
	        android:text="Host Player"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="#040404"
	        android:textSize="20sp"
	        android:textStyle="bold"
	        android:typeface="sans" />
	
	    <ImageView
	        android:id="@+id/ivFlagPlayer2"
	        android:layout_width="35dp"
	        android:layout_height="35dp"
	        android:layout_alignLeft="@+id/ivFlagPlayer1"
	        android:layout_below="@+id/tvCompetePlayer2"
	        android:src="@drawable/israel1" />
	
	    <TextView
	        android:id="@+id/tvCompetePlayer1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/ppvCompetitionHost"
	        android:layout_centerHorizontal="true"
	        android:text="Guest Player"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="#040404"
	        android:textSize="20sp"
	        android:textStyle="bold"
	        android:typeface="sans" />
	
	    <ImageView
	        android:id="@+id/ivFlagPlayer1"
	        android:layout_width="35dp"
	        android:layout_height="35dp"
	        android:layout_alignLeft="@+id/tvCompetePlayer1"
	        android:layout_below="@+id/tvCompetePlayer1"
	        android:src="@drawable/israel1" />
	
	    <LinearLayout
	        android:id="@+id/linearLayoutHeartsPlayer1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ppvCompetitionHost"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/ivFlagPlayer1"
	        android:orientation="horizontal" >
	
	        <ImageView
	            android:id="@+id/ivPlayer1Heart1"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:src="@drawable/heart" />
	
	        <ImageView
	            android:id="@+id/ivPlayer1Heart2"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:src="@drawable/heart" />
	
	        <ImageView
	            android:id="@+id/ivPlayer1Heart3"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:src="@drawable/heart" />
	
	        <ImageView
	            android:id="@+id/ivPlayer1Heart4"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:src="@drawable/heart" />
	
	        <ImageView
	            android:id="@+id/ivPlayer1Heart5"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:src="@drawable/heart" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/linearLayoutHeartsPlayer2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ivFlagPlayer2"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/ivFlagPlayer2"
	        android:orientation="horizontal" >
	
	        <ImageView
	            android:id="@+id/ivPlayer2Heart1"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:src="@drawable/heart" />
	
	        <ImageView
	            android:id="@+id/ivPlayer2Heart2"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:src="@drawable/heart" />
	
	        <ImageView
	            android:id="@+id/ivPlayer2Heart3"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:src="@drawable/heart" />
	
	        <ImageView
	            android:id="@+id/ivPlayer2Heart4"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:src="@drawable/heart" />
	
	        <ImageView
	            android:id="@+id/ivPlayer2Heart5"
	            android:layout_width="25dp"
	            android:layout_height="25dp"
	            android:src="@drawable/heart" />
	    </LinearLayout>
	
		<FrameLayout
		    android:id="@+id/fragment_game_container"
		    android:layout_width="match_parent"
		    android:layout_height="100dp"
		    android:layout_alignBottom="@+id/ViewPlayer1"
		    android:layout_alignParentRight="true"
		    android:layout_alignTop="@+id/lineBelowWaiting" >
		</FrameLayout>
	
	   	<FrameLayout
	   	    android:id="@+id/fragment_timer_container"
	   	    android:layout_width="match_parent"
	   	    android:layout_height="70dip"
	   	    android:layout_above="@+id/ViewPlayer1"
	   	    android:layout_alignParentLeft="true" >
	   	</FrameLayout>
	   	
	</RelativeLayout>
	
	<RelativeLayout
	    android:id="@+id/left_drawer_chat_LinearLayout"
	    android:layout_height="wrap_content"
	    android:layout_width="240dp"
	    android:orientation="vertical"
	    android:background="@color/white"
	    android:layout_gravity="start" >
	   	
	    <ListView android:id="@+id/left_drawer_chat_listView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:choiceMode="singleChoice"
	        android:divider="@android:color/darker_gray"
	        android:dividerHeight="1dp"/>
	    <LinearLayout
	         android:id="@+id/EditTextDrawerChat"
	         android:layout_alignParentBottom="true"
    	     android:layout_width="wrap_content"
    	     android:orientation="horizontal"
	         android:layout_height="wrap_content">
	      	 <EditText
		        android:id="@+id/EditTextChatLine"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="Write A Message..." />
   	      	 <Button
		        android:id="@+id/ButtonSendChatMessage"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Send"/>
	    </LinearLayout>

	</RelativeLayout>


</android.support.v4.widget.DrawerLayout>