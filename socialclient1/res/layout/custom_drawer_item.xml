<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

   	<!-- Drawer Profile Item Layout -->
     <LinearLayout
        android:id="@+id/profileItemDrawerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      	android:layout_marginTop="0dp">
      
         <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:minHeight="50dp">
                
			   <ImageView
			       android:id="@+id/ivProfilePicDrawer"
			       android:layout_width="30dp"
			       android:layout_height="30dp"
			       android:layout_marginLeft="5dp"
			       android:layout_marginTop="5dp"
			       android:contentDescription="@string/profileIcon" />
			   
          	 <com.facebook.widget.ProfilePictureView
		            android:id="@+id/ivDrawerProfileFacebookImage"
		            android:layout_width="30dip"
		            android:layout_height="30dip"
		            android:layout_margin="8dp" >
	        	</com.facebook.widget.ProfilePictureView>

                 <TextView
                     android:id="@+id/drawer_profileName"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="20dp"
                     android:layout_marginLeft="10dp"
                     android:textAppearance="?android:attr/textAppearanceSmall"/>
            </LinearLayout>

         	<View
		      android:layout_width="match_parent"
		      android:layout_height="0.7dp"
		      android:layout_marginBottom="1dp"
		      android:layout_marginTop="1dp"
		      android:layout_marginLeft="10dp"
		      android:layout_marginRight="10dp"
		      android:background="#EDF2EF">
	    	 </View>
        
    </LinearLayout>

     
     <!-- Drawer Language Layout -->
     <LinearLayout
      android:id="@+id/itemLanguageLayout"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:orientation="vertical"
      android:layout_marginTop="0dp"
      android:background="?android:attr/activatedBackgroundIndicator">
 
              <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:minHeight="50dp">
	 
	                  <TextView
	                      android:id="@+id/drawer_itemLanguageTitle"
	                      android:layout_width="wrap_content"
	                      android:layout_height="wrap_content"
	                      android:layout_marginLeft="5dp"
	                      android:layout_marginTop="5dp"
	                      android:textAppearance="?android:attr/textAppearanceSmall"/>
	                  
	                  	<ImageView
	                      android:id="@+id/drawer_itemLanguageIcon"
	                      android:layout_width="25dp"
	                      android:layout_marginLeft="5dp"
	                      android:layout_height="25dp"/>

              </LinearLayout>
 
	     <View
		      android:layout_width="match_parent"
		      android:layout_height="0.7dp"
		      android:layout_marginBottom="1dp"
		      android:layout_marginTop="1dp"
		      android:layout_marginLeft="10dp"
		      android:layout_marginRight="10dp"
		      android:background="#EDF2EF">
	     </View>
 
    </LinearLayout>
 
     
     
     
  
  	<!-- Drawer Item Layout -->
    <LinearLayout
      android:id="@+id/itemLayout"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:orientation="vertical"
      android:layout_marginTop="0dp"
      android:background="?android:attr/activatedBackgroundIndicator">
 
              <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:minHeight="50dp">
	                  	
	                  <ImageView
	                      android:id="@+id/drawer_itemIcon"
	                      android:layout_width="wrap_content"
	                      android:layout_marginTop="5dp"
	                      android:layout_height="wrap_content"/>
	 
	                  <TextView
	                      android:id="@+id/drawer_itemName"
	                      android:layout_width="wrap_content"
	                      android:layout_height="wrap_content"
	                      android:layout_marginLeft="5dp"
	                      android:layout_marginTop="10dp"
	                      android:textAppearance="?android:attr/textAppearanceSmall"/>
              </LinearLayout>
 
	     <View
		      android:layout_width="match_parent"
		      android:layout_height="0.7dp"
		      android:layout_marginBottom="1dp"
		      android:layout_marginTop="1dp"
		      android:layout_marginLeft="10dp"
		      android:layout_marginRight="10dp"
		      android:background="#EDF2EF">
	     </View>
 
    </LinearLayout>
 
</RelativeLayout>